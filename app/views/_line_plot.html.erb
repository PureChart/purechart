<div class="chart-flex-container" style="width: fit-content">
    <div style="margin-left: 96px">
        <h4 class="purechart" style="text-align: center; font-family: <%= style['labels']['font'] %>; font-weight: <%= style['labels']['weight'] %>; color: <%= style['labels']['color'] %>"><%= configuration[:axes][:vertical] %><%= configuration[:symbol] ? " (" + configuration[:symbol] + ")" : ''%></h4>
    </div>
    <div class="line-chart" style=" border-bottom: <%=  style['axes']['style'] %>"
        <div class="line-chart-elements">
            <%= data.each_with_index do |object, index| %>
                <div class="line-point" style="top: <%= index * (100 / (data.size - 1)) %>%; background-color: <%= style['colors'][object[:color]] || object[:color] %>;">
                    <p class="point-label" style="font-family: <%= style['labels']['font'] %>; font-weight: <%= style['labels']['weight'] %>; color: <%= style['labels']['color'] %>"><%= object[:value] %></p>
                </div>
            <% end %>
            <div class="line" style="height: 100%; width: 1px; background-color: <%= style['gridlines']['style'] %>;"></div>
        </div>
    </div>
  
</div>

<%= render :partial => '/styles' %>
