<style>
@import url('https://fonts.googleapis.com/css2?family=Inter+Tight:wght@400;600&display=swap');

h4.purechart {
	margin: 0;
	margin-top: 16px;
	margin-bottom: 16px;
	font-family: 'Inter Tight', sans-serif;
}

/* Line Plot style*/
.line-chart{
	width: 500px;
	height: 400px;

	padding-top: 32px;
	padding-bottom: 32px;

	position: absolute;

	border-bottom: 2px solid black;
}

.line-chart-elements{
	width: 100%;
	height: 100%;

	padding-bottom: 32px;

	display: flex;
	flex-direction: column;
	align-items: baseline;
	justify-content: space-around;
}

.line-point{
	position: absolute;
	height: 0px; /* Set width and heigh to 0 to replace with SVG */
	width: 0px; /* To make the square invisible*/

	left: -8px;
	
	background-color: #000; /* (black) */
}

.tooltip-trigger {
	position: absolute;
	bottom: -40px;
	height: 64px;
	width: 64px;
	background-color: transparent;

	margin-bottom: 32px;

    cursor: pointer; 
    z-index: 1; /* Set z-index to ensure it receives hover */
}

.cross-tooltip{
	position: absolute;

	padding: 8px;

	background-color: #fff;
	border-radius: 8px;
	box-shadow: rgba(0, 0, 0, 0.25) 0px 10px 36px 0px, rgba(0, 0, 0, 0.15) 0px 0px 0px 1px;

	opacity: 0;
	transform: translateX(-50%) translateY(-50%);

	transition: 0.25s all ease;
}

.tooltip-trigger:hover .cross-tooltip {
	opacity: 1;
	transform: translateX(-50%) translateY(calc(-50% - 32px));
}

.cross-tooltip p {
	margin: 0px;
	font-family: 'Inter Tight';
	font-weight: 700;
	color: black;
}

/* === */

.chart {
	width: 500px;
	height: 400px;

	margin-left: 96px;
	padding-top: 32px;
	padding-bottom: 32px;

	position: relative;

	border-left: 2px solid black;
	border-bottom: 2px solid black;
}

.chart-elements {
	width: 100%;
	height: 100%;

	display: flex;
	flex-direction: column;
	align-items: baseline;
	justify-content: space-around;
}

.bar {
	height: 4px;
	background-color: #476D54;

	margin-bottom: 32px;
	position: relative;
	border-top-right-radius: 5px;
	border-bottom-right-radius: 5px;

	cursor: pointer;
	z-index: 1;
}

.pie {
	color: transparent
}

.pie-slice:hover {
	fill-opacity: 0.8;
	transition: 0.25s all ease;
}

.pie-slice:hover:nth-child(1n + 0) + .pie-slice-arc:nth-child(1n+0) {
	stroke-opacity: 0.3;
	transition: 0.05s all ease;
}

.bar-chart-bar {
	height: 16px;
}

.lollipop-end {
	width: 16px;
	height: 16px;
	background-color: #476D54;
	border-radius: 100px;
	position: absolute;
	top: 50%;
	right: -8px;
	transform: translateY(-50%);
}

.bar-title {
	position: absolute;
	top: -12px;
	margin: 0;
	right: 100%;
	height: 24px;
	width: 96px;
	line-height: 24px;
	font-family: 'Inter Tight', sans-serif;
	font-weight: 700;

	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
	padding-right: 8px;
}

.bar-chart-bar-title {
	top: -6px;
}

.tooltip {
	position: absolute;
	top: 50%;
	left: 50%;

	padding: 8px;

	background-color: #fff;
	border-radius: 8px;
	box-shadow: rgba(0, 0, 0, 0.25) 0px 10px 36px 0px, rgba(0, 0, 0, 0.15) 0px 0px 0px 1px;

	opacity: 0;
	transform: translateX(-50%) translateY(-50%);

	transition: 0.25s all ease;
}

.tooltip p {
	margin: 0px;
	font-family: 'Inter Tight';
	font-weight: 700;
	color: black;
}

.gridlines {
	position: absolute;
	top: 0;
	right: 0;
	left: 0;
	bottom: 0;

	display: flex;
}

.gridlines div {
	height: 100%;
	border-right: 2px solid #00000033;

	display: flex;
	flex-direction: column;
	justify-content: end;
}

.gridlines div p {
	margin: 0;
	font-family: 'Inter Tight';
}

/* TICKS */
.gridlines-ticks {
	margin-left: 96px;
	width: 500px;
	display: flex;
	border-bottom: 2px solid #00000000;
	padding-left: 2px;
	text-align: right;
}

.gridlines-ticks div {
	border-right: 2px solid #0003;
	display: flex;
	flex-direction: column;
	justify-content: end;
	position: relative;
}

.gridlines-ticks div p {
	margin: 0;
	font-family: 'Inter Tight';
}

.bar:hover .tooltip {
	opacity: 1;
	transform: translateX(-50%) translateY(calc(-50% - 32px));
}

* {
	box-sizing: border-box;
}
</style>